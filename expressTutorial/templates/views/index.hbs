body {
  font-family: sans-serif;
  margin: 0;
  padding: 0;
}

header {
  background-color: #50a3a4;
  color: white;
  padding: 10px;
}

nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

nav li {
  display: inline-block;
  margin-right: 10px;
}

nav li:last-child {
